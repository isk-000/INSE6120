{
    "version": "1.0.0",
    "manifest_version": 3,
    "name": "Privacy Policy Analyzer",
    "description": "Make informed decisions with ease! This extension simplifies privacy policies by analyzing their content and generating concise summaries. Understand data usage, and permissions in seconds",
    "action": {
        "default_popup": "js/index.html",
        "default_title": "Privacy Policy Analyzer"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "scripting",
        "contextMenus",
        "storage",
        "unlimitedStorage"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'"
    },
    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}